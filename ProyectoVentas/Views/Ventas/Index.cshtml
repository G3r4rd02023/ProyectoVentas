@model IEnumerable<ProyectoVentas.Models.Entidades.Venta>

@{
    ViewData["Title"] = "Index";
}

@section Estilos {    
    <link href="https://cdn.datatables.net/1.13.6/css/jquery.dataTables.min.css" rel="stylesheet" />
}

<div class="row">
    <div class="col-md-12">
        <div class="card">
            <div class="card-header text-center">
                <h5>Pedidos</h5>
            </div>
            <div class="card-body">
                <table class="table table-hover table responsive table stripped" id="venta">
                    <thead>
                        <tr>
                            <th>
                                Fecha
                            </th>
                            <th>
                                Cliente
                            </th> 
                            <th>
                                Imagen
                            </th>
                            <th>
                                Total
                            </th>
                            <th></th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>
                                    @Html.DisplayFor(modelItem => item.FechaCreacion)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Usuario.NombreCompleto)
                                </td> 
                                <td>
                                    <img src="@item.Usuario.URLFotoPerfil" style="width:100px; border-radius: 50%;" />
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Total)
                                </td>                                
                                <td>
                                    <a asp-action="Detalle" asp-route-id="@item.Id" class="btn btn-outline-info"><i class="fa-solid fa-circle-info"></i></a>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script src="https://cdn.datatables.net/1.13.6/js/jquery.dataTables.min.js"></script>

    <script>
        $(document).ready(function () {
            $('#venta').DataTable(
                {
                    "language": {
                        url: "https://cdn.datatables.net/plug-ins/1.11.5/i18n/es-ES.json"
                    },

                });
        });
    </script>
}



